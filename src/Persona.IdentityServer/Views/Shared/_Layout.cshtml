<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Persona Code - @ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/images/favicon.svg" type="image/svg+xml" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
        <link rel="stylesheet" href="~/css/site.css">
    </environment>
    <environment include="Production">
        <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
            crossorigin="anonymous"
            asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
            asp-fallback-test-class="sr-only"
            asp-fallback-test-property="position"
            asp-fallback-test-value="absolute"
        />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @await RenderSectionAsync("Stylesheet", required: false)
</head>
<body class="h-100">
    <main role="main" class="h-100">
        <div class="container h-100">
            @RenderBody()
        </div>
    </main>
    <footer id="footer" class="fixed-bottom">
        <hr />
        <div class="container">
            <p class="text-muted text-center">&copy; @DateTime.Now.Year - Persona Code</p>
        </div>
    </footer>

    <environment include="Development">
        <script type="text/javascript" src="~/lib/jquery/jquery.slim.js"></script>
        <script type="text/javascript" src="~/lib/popper/umd/popper.js"></script>
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment include="Production">
        <script
            type="text/javascript"
            src="https://code.jquery.com/jquery-3.5.0.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"
            asp-fallback-href="~/lib/jquery/jquery.slim.min.js"
            asp-fallback-test-class="sr-only"
            asp-fallback-test-property="position"
            asp-fallback-test-value="absolute">
        </script>
        <script
            type="text/javascript"
            src="https://cdn.jsdelivr.net/npm/popper.js@2.3.3/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"
            asp-fallback-href="~/lib/popper/popper.min.js"
            asp-fallback-test-class="sr-only"
            asp-fallback-test-property="position"
            asp-fallback-test-value="absolute">
        </script>
        <script
            type="text/javascript"
            src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"
            asp-fallback-href="~/lib/bootstrap/dist/js/bootstrap.min.js"
            asp-fallback-test-class="sr-only"
            asp-fallback-test-property="position"
            asp-fallback-test-value="absolute">
        </script>
    </environment>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
